# --- PostgreSQL ---
POSTGRES_DB=filesvc
POSTGRES_USER=filesvc
POSTGRES_PASSWORD=filesvc
# SQLAlchemy (async) строка подключения
DATABASE_URL=postgresql+asyncpg://filesvc:filesvc@db:5432/filesvc

# --- Redis (для Celery) ---
REDIS_BROKER=redis://redis:6379/0
REDIS_BACKEND=redis://redis:6379/1

# --- JWT ---
JWT_SECRET=devsecret_change_me
JWT_ALG=HS256
JWT_EXPIRES_MIN=60

# --- MinIO / S3 ---
# Внутренная точка для SDK (мы используем docker-сервис "minio")
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=files
S3_REGION=us-east-1
S3_USE_SSL=false
# Публичная точка (куда редиректит presigned URL; в docker-сети это minio)
S3_PUBLIC_ENDPOINT=http://minio:9000
